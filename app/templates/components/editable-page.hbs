{{#unless readonly}}
  <div class="controls">
    <button {{action "toggleEdit"}}>Toggle edit</button>
  </div>
{{/unless}}
{{#if editing}}
  {{#mobiledoc-editor mobiledoc=(readonly mobiledoc) on-change=(action "updateMobiledoc") cards=cards as |editor|}}
    {{mobiledoc-toolbar editor=editor}}
    {{#each menus as |menu|}}
      {{#md-btn-dropdown text=menu.name}}
        {{#each menu.items as |menuItem|}}
          <li {{action editor.addCardInEditMode menuItem.component}}>
            <span>{{menuItem.name}}</span>
          </li>
        {{/each}}
      {{/md-btn-dropdown}}
    {{/each}}
  {{/mobiledoc-editor}}
  {{else}}
  {{render-mobiledoc mobiledoc=(readonly mobiledoc) cardNames=cardNames}}
{{/if}}


{{cards/star-rating rating=3 maxRating=10}}